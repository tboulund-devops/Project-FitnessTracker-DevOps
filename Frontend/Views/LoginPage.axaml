<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModels1="clr-namespace:Frontend.ViewModels"
        x:Class="Frontend.Views.LoginPage"
        x:DataType="viewModels1:LoginPageVM"
        Width="900" Height="650">
   
    <StackPanel>
        <TextBlock Text="Please Login" FontSize="16" HorizontalAlignment="Center"/>

        <TextBox Watermark="Username"
                 Text="{Binding LoginInfo.Username}"/>

        <TextBox Watermark="Password"
                 PasswordChar="â€¢"
                 Text="{Binding LoginInfo.Password}"/>

        <Button Content="Login"
                Command="{Binding LoginCommand}"/>
        
        <Label Content="{Binding ErrorMessage}"></Label>
        
    </StackPanel>
   
</UserControl>